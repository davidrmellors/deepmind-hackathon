# Google Maps Platform API Keys
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_ROUTES_API_KEY=your_google_routes_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Cape Town Bounds (for location validation)
CAPE_TOWN_LAT_MIN=-34.5
CAPE_TOWN_LAT_MAX=-33.5
CAPE_TOWN_LNG_MIN=18.0
CAPE_TOWN_LNG_MAX=19.0

# Safety Scoring Configuration
SAFETY_SCORE_CACHE_TTL=300
CRIME_DATA_UPDATE_INTERVAL=3600
AI_EXPLANATION_ENABLED=true

# Development Settings
DEBUG=true
LOG_LEVEL=debug